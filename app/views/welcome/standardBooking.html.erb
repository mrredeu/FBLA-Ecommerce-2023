<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Moonlight Hotel</title>
        <%= stylesheet_link_tag "booking.css" %>
        <%= javascript_include_tag "booking.js" %>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body class="background">
        <h1 style="text-align:center;">Standard Room</h1>
        <div class="slideshow-container">
            <!-- Full-width images with number and caption text -->
            <div class="mySlides fade">
                <%= image_tag('standard1.jpg', style:"width:500px;height:auto;") %>
            </div>

            <div class="mySlides fade">
                <%= image_tag('standard2.jpg', style:"width:500px;height:auto;") %>
            </div>

            <!-- Next and previous buttons -->
            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>
            <br>
        </div>
    </body>
</html>
