    <script>
        var priceRange = document.getElementById('price-range');
        var priceDisplay = document.getElementById('price-display');
        var roomBoxes = document.querySelectorAll('.box');

        // Update the price display when the price range changes
        priceRange.addEventListener('input', () => {
            var maxPrice = priceRange.value;
            var minPrice = priceRange.min;
            priceDisplay.textContent = `$${minPrice} - $${maxPrice}`;

            // Show or hide each room box based on its price
            roomBoxes.forEach(roomBox => {
                var roomPrice = parseInt(roomBox.dataset.price);
                if (roomPrice <= maxPrice) {
                    roomBox.style.display = 'flex';
                } else {
                    roomBox.style.display = 'none';
                }
            });
        });
    </script>
