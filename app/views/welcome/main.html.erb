<%# get to cmd prompt and get to users/pasha/documents/ this folder to launch the program the run live port on vs code%>
<body class="background">
    <div class="main">
        <div style="width: 100%; display:flex;">
            <div class="mainIMG">
                <%= image_tag('logo.png', style:"width:100%") %>
            </div>
            <div style="width: 80%;">
                <h1 class="Title">Moonlight Hotel</h1>
            </div>
        </div>

        <nav class="navbar">
            <%= link_to 'Rooms', welcome_main_path, class:"navbar-item"%>
            <%= link_to 'Attrations', welcome_attractions_path, class:"navbar-item"%>
            <%= link_to 'About Us', welcome_aboutUs_path, class:"navbar-item"%>
        </nav>
    </div>
    <div class="price-range-feature">
        <label for="price-range">Filter by Price:</label>
        <input type="range" id="price-range" min="100" max="250" step="10" value="250">
        <span id="price-display">$100 - $250</span>
    </div>

    <div class="container">
        <div class="box" data-price="100">
            <div class="images-container">
                <%= image_tag('standard1.jpg', class:"images") %>
            </div>
            <div class="text">
                <h3>Standard Room</h3>
                <p class="base_price">$100</p>
                <p class="full_price">$110 includes taxes & fees</p>
                <%= link_to 'Reserve Room', rooms_new_path(roomType:'Standard Room', bPrice:'Price: $100', fPrice:'Full Price: $110'), class:"redirect-link"%>
            </div>
        </div>
        <div class="box" data-price="150">
            <div class="images-container">
                <%= image_tag('deluxe1.jfif', class:"images") %>
            </div>
            <div class="text">
                <h3>Deluxe Room</h3>
                <p class="base_price">$150</p>
                <p class="full_price">$170 includes taxes & fees</p>
                <%= link_to 'Reserve Room', rooms_new_path(roomType:'Deluxe Room', bPrice:'Price: $150', fPrice:'Full Price: $170'), class:"redirect-link"%>
            </div>
        </div>
        <div class="box" data-price="200">
            <div class="images-container">
                <%= image_tag('connecting1.jpg', class:"images") %>
            </div>
            <div class="text">
                <h3>Connecting Room</h3>
                <p class="base_price">$200</p>
                <p class="full_price">$220 includes taxes & fees</p>
                <%= link_to 'Reserve Room', rooms_new_path(roomType:'Connecting Room', bPrice:'Price: $200', fPrice:'Full Price: $220'), class:"redirect-link"%>
            </div>
            </div>
        <div class="box" data-price="200">
            <div class="images-container">
                <%= image_tag('suite1.jfif', class:"images") %>
            </div>
            <div class="text">
                <h3>Suite</h3>
                <p class="base_price">$230</p>
                <p class="full_price">$250 includes taxes & fees</p>
                <%= link_to 'Reserve Room', rooms_new_path(roomType:'Suite Room', bPrice:'Price: $230', fPrice:'Full Price: $250'), class:"redirect-link"%>
            </div>
        </div>
    </div>  

    <h1 style="text-align: center; font-size: vw;">Our Location</h1>  
    <div class="Location">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3314.7267749939356!2d-117.9229038839461!3d33.81936333741198!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80dcd62b3434c4b1%3A0x4ee319f1b1bc74d1!2sAnaheim%20Majestic%20Garden%20Hotel!5e0!3m2!1sen!2sus!4v1676434017996!5m2!1sen!2sus" width="800" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe> 
    </div>

    <script>
        var priceRange = document.getElementById('price-range');
        var priceDisplay = document.getElementById('price-display');
        var roomBoxes = document.querySelectorAll('.box');

        // Update the price display when the price range changes
        priceRange.addEventListener('input', () => {
            var maxPrice = priceRange.value;
            var minPrice = priceRange.min;
            priceDisplay.textContent = `$${minPrice} - $${maxPrice}`;

            // Show or hide each room box based on its price
            roomBoxes.forEach(roomBox => {
                var roomPrice = parseInt(roomBox.dataset.price);
                if (roomPrice <= maxPrice) {
                    roomBox.style.display = 'flex';
                } else {
                    roomBox.style.display = 'none';
                }
            });
        });
    </script>
</body>



